extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      //- Add a title or heading
      h1 Portfolio Site

      //- Add a description for your portfolio
      p.lead.text-light
        | Portfolio site using JS, Express and Node JS to show the projects I have built so far in the TechDegree Program.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- Use the Pug `each` iterator
      //- getting data from the property projects in data.json

      each val in data.projects

        .cell
          a(href=`/projects${val.id}`)
            img.thumbnail(src=`${val.image_urls[0]}`)
            h5 #{val.project_name}
